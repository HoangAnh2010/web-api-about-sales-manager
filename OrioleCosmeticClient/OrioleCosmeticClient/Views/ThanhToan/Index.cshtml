<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="shortcut icon" href="images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/reset.css" />
    <link rel="stylesheet" type="text/css" href="lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="lib/select2/css/select2.min.css" />
    <link rel="stylesheet" type="text/css" href="lib/jquery.bxslider/jquery.bxslider.css" />
    <link rel="stylesheet" type="text/css" href="lib/owl.carousel/owl.carousel.css" />
    <link rel="stylesheet" type="text/css" href="lib/jquery-ui/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="lib/fancyBox/source/jquery.fancybox.css" />
    <link rel="stylesheet" type="text/css" href="css/animate.css" />
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" type="text/css" href="css/green.css" />
    <link rel="stylesheet" type="text/css" href="css/responsive.css" />
    <link rel="stylesheet" type="text/css" href="css/style_frm_dkdn.css" />
    <link rel="stylesheet" href="css/switcher.css">
    <title>Eco Shop - Check Out</title>
</head>
<body class="green" ng-app="myapp" ng-controller="thanhtoan">

    <div class="columns-container">
        <div class="container" id="columns">
            <!-- page heading-->
            <h2 class="page-heading">
                <span class="page-heading-title">THANH TOÁN</span>
            </h2>
            <!-- ../page heading-->
            <div class="page-content page-order">
                <div class="panel-group checkout-page accordion scrollable" id="checkout-page">


                    <!-- BEGIN PAYMENT ADDRESS -->
                    <div id="payment-address" class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">
                                <a data-toggle="collapse" data-parent="#checkout-page" href="#payment-address-content" class="accordion-toggle">
                                    Bước 1: Thông tin khách hàng
                                </a>
                            </h2>
                        </div>
                        <div id="payment-address-content" class="panel-collapse collapse in">
                            <div class="panel-body row">
                                <div class="col-md-6 col-sm-6">


                                </div>
                               
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="lastname">Họ và tên người nhận<span class="require">*</span></label>
                                        <input type="text" id="lastname" class="input form-control" ng-model="name">
                                    </div>
                                    <div class="form-group">
                                        <label for="telephone">Số điện thoại<span class="require">*</span></label>
                                        <input type="text" id="telephone" class="input form-control" ng-model="phone">
                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="address1">Địa chỉ<span class="require">*</span></label>
                                        <textarea type="text" id="address1" class="input form-control" ng-model="address"></textarea>
                                    </div>
                                </div>

                                <hr>
                                <div class="col-md-12">
                                    <button class="button pull-left" type="submit" id="button-payment-method" data-toggle="collapse" data-parent="#checkout-page" data-target="#confirm-content">Tiếp tục</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END PAYMENT ADDRESS -->
                    <!-- BEGIN CONFIRM -->
                    <div id="confirm" class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">
                                <a data-toggle="collapse" data-parent="#checkout-page" href="#confirm-content" class="accordion-toggle">
                                    Bước 2: Xác nhận đặt hàng
                                </a>
                            </h2>
                        </div>
                        <div id="confirm-content" class="panel-collapse collapse">
                            <div class="panel-body row">
                                <div class="col-md-12 clearfix">
                                    <div class="table-wrapper-responsive">
                                        <table class="table table-bordered table-responsive cart_summary">
                                            <thead>
                                                <tr>
                                                    <th class="cart_product">Sản phẩm</th>
                                                    <th>Ảnh</th>
                                                    <th>Số lượng</th>
                                                    <th>Giá</th>
                                                </tr>
                                            </thead>
                                            <tbody id="show-list-order">
                                                <tr ng-repeat="item in carts.giohang">
                                                    <td>{{item.Tensp}}</td>
                                                    <td><img src="~/Content/images/{{item.Anh}}" /></td>
                                                    <td>{{item.SL}}</td>
                                                    <td>{{item.Gia}}</td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="3"><strong>Tổng giá</strong></td>
                                                    <td colspan="2" id="total_price" style="font-weight: bold; color: #e84d1c; font-size: 20px;">{{carts.tongtien}}</td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="clearfix"></div>
                                    <button class="button pull-right" type="submit" id="button-confirm" ng-click="pay()">Đặt hàng</button>
                                    <a href="/Home/Index"
                                    <button type="button" style="color:aliceblue" id ="btn-remove-all-item" class="button-cancel pull-right margin-right-20">Hủy đơn hàng</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END CONFIRM -->
                </div>

            </div>
        </div>
    </div>
    <!-- ./page wapper-->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" ng-app="user" ng-controller="login">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel" style="font-weight: bold">ĐĂNG NHẬP/ĐĂNG KÝ</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-7" style="border-right: 1px dotted #C2C2C2;padding-right: 30px;">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#Login" data-toggle="tab">Đăng nhập</a></li>
                                <li><a href="#Registration" data-toggle="tab">Đăng ký</a></li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <!-- LOGIN -->
                                <div class="tab-pane active" id="Login">
                                    <div name="dangnhap_from" class="form-horizontal"
                                         id="dangnhap_from" method="post">
                                        <div class="form-group">
                                            <label for="email_login" class="col-sm-3 control-label">Email</label>

                                            <div class="col-sm-9">
                                                <input type="email" class="input form-control" id="email_login"
                                                       placeholder="Email...." ng-model="account" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="pass_login" class="col-sm-3 control-label">Mật khẩu</label>

                                            <div class="col-sm-9">
                                                <input type="password" class="input form-control" id="pass_login"
                                                       placeholder="Mật khẩu...." ng-model="password" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3">
                                            </div>
                                            <div class="col-sm-9">
                                                <button class="button" type="submit" id="button-confirm" ng-click="login()">Đăng nhập</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- REGISTER -->
                                <div class="tab-pane fade" id="Registration">
                                    <div class="form-horizontal" name="dangkytk_form"
                                         enctype="multipart/form-data" id="dangkytk_form register">
                                        <div class="form-group">
                                            <label for="frm_name" class="col-sm-4 control-label">Họ tên</label>

                                            <div class="col-sm-8">
                                                <input type="text" class="input form-control" id="frm_name" required ng-model="name" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="emailtk" class="col-sm-4 control-label">Email</label>

                                            <div class="col-sm-8">
                                                <input type="email" class="input form-control" id="emailtk" required ng-model="email" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="pass_tk" class="col-sm-4 control-label">Mật khẩu</label>

                                            <div class="col-sm-8">
                                                <input type="password" class="input form-control" id="pass_tk" required ng-model="password" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="dienthoai" class="col-sm-4 control-label">Số điện thoại</label>

                                            <div class="col-sm-8">
                                                <input type="text" name="dienthoai" class="input form-control" id="dienthoai_dk" ng-model="phone" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="diachi" class="col-sm-4 control-label">Địa chỉ</label>

                                            <div class="col-sm-8">
                                                <input type="text" name="diachi" class="input form-control" id="diachi_dk" ng-model="address" />
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-sm-4">
                                            </div>
                                            <div class="col-sm-8">
                                                <button class="button" type="submit" ng-click="signIn()">Đăng ký</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="OR" class="hidden-xs">Hoặc</div>
                        </div>

                        <!-- Facebook - Google account -->
                        <div class="col-md-5">
                            <div class="row text-center sign-with">
                                <div class="social-header">Đăng nhập với</div>
                                <div class="unit social-column">
                                    <div class="social-inner">
                                        <div><a href=""><img src="~/Content/images/fb-login-button-big.png" alt="login-facebook"></a></div>
                                        <div><a href=""><img src="~/Content/images/gg-login-button-big.png" alt="login-google"></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="#" class="scroll_top" title="Scroll to Top" style="display: inline;">Scroll</a>
    <!-- Script-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/thanhtoan.module.js"></script>
</body>

</html>