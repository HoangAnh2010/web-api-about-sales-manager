@model IEnumerable<OCC.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table align="center" , border="1" style="color:black;background:center;background-color:burlywood">
    <tr>
        <td>
            <h3 style="vertical-align:inherit">   QUẢN LÝ SẢN PHẨM   </h3>
        </td>
    </tr>
</table>


<table style="color:white; text-align:center; background-color:burlywood" width="100" >
    <tr>
        <td>
            <strong>
                <p>
                    @Html.ActionLink("Thêm mới", "Create", "SanPhams")
                </p>
            </strong>
        </td>
    </tr>
</table>

<table class="table" align="center" >
    <tr align="center">
        <th>
            Tên sản phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Ảnh
        </th>
        <th>
            Mã loại
        </th>
        <th>
            Thao tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tensp)
            </td>
            <td>
                @{
                    //tach phan mo ta ra thanh cac phan nho hon
                    string[] a = item.mota.ToString().Split(new string[] { " " }, StringSplitOptions.None);
                    //khai bao bien tam de luu tru cac phan tu duoc tach
                    string tam = "";
                    if (a.Length < 20)
                    {
                        tam = item.mota;
                    }
                    else
                    {
                        for (int i = 0; i < 20; i++)
                        {
                            tam = tam + a[i] + " ";
                        }
                        tam = tam + "...";
                    }
                }
                <div title="@item.mota">
                    @tam
                </div>
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.soluong)
            </td>
            <td>
                @string.Format("{0:#,##0}", item.dongia)
            </td>
            <td>
                <img src="~/Content/images/product-detail/@item.anh" alt="Alternate Text" height="100" width="100" />
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.maloai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.masp }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.masp }) |
                @*@Html.ActionLink("Xóa", "Delete", new { id = item.masp }) *@
                <input type="button" value="xóa" onclick ="del('@item.masp')">
            </td>
        </tr>
    }

</table>

@section js{
    <script>
        function del(id) {
            id = id.trim();
            if (confirm("Bạn có chắc muốn xóa sản phẩm này không?") == true) {
                location.href = '/SanPhams/Delete/' + id;
            } else {
                
            }
        }
    </script>
}
