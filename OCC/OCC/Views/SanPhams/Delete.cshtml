@model OCC.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table style="color:white; text-align:center; background-color: darkgreen" width="100%" height="50">
    <tr>
        <td><h2><strong>Xóa sản phẩm</strong></h2></td>
    </tr>
</table>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tensp)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mota)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soluong)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @string.Format("{0:#,##0}", Model.dongia)
        </dd>

        <dt>
            Ảnh
        </dt>

        <dd>
            <img src="~/Content/images/product-detail/@Model.anh" alt="Alternate Text" height="100" width="100" />
        </dd>

        <dt>
            Mã loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.maloai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />
        |
            @Html.ActionLink("Trở về", "Index")
        </div>

    }
</div>
