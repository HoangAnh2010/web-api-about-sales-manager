@model OCC.Models.LoaiSP

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <table style="color:white; text-align:center; background-color: darkgreen" width="100%" height="50">
        <tr>
            <td><h2><strong>Xóa loại sản phẩm</strong></h2></td>
        </tr>
    </table>
</head>
<body>
    <h3>Bạn có chắc chắn muốn xóa không?</h3>
    <div>
        <h4>LoaiSP</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên loại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tenloai)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Trở về", "Index")
            </div>
        }
    </div>
</body>
</html>